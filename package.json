{
	"name": "random-presen",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"size-check": "node scripts/size-check.js",
		"check:all": "pnpm lint && pnpm size-check && pnpm check && pnpm build",
		"check:quick": "pnpm lint",
		"check:console": "eslint --no-eslintrc --config '{\"rules\":{\"no-console\":\"error\"}}' --ext .ts,.js,.svelte src/ --quiet || echo '⚠️ Console statements found. Use logger service instead.'",
		"fix:all": "pnpm format && pnpm check:all"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/adapter-vercel": "^6.1.2",
		"@sveltejs/kit": "^2.48.5",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/vite": "^4.1.17",
		"autoprefixer": "^10.4.22",
		"drizzle-kit": "^0.31.7",
		"eslint": "^9.39.1",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.13.0",
		"glob": "^13.0.0",
		"globals": "^16.5.0",
		"minimatch": "^10.1.1",
		"postcss": "^8.5.6",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.7.1",
		"svelte": "^5.43.8",
		"svelte-check": "^4.3.4",
		"tailwindcss": "^4.1.17",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.47.0",
		"vite": "^7.2.2"
	},
	"dependencies": {
		"@neondatabase/serverless": "^1.0.2",
		"drizzle-orm": "^0.44.7",
		"pdfjs-dist": "^5.4.394"
	}
}
